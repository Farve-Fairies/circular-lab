---
const { title, content } = Astro.props;
---

<details class="accordion">
  <summary> <img class="accordion-icon closed" src="public/Vector.png" alt="Pil lukket" />
    <img class="accordion-icon open" src="public/streg.png" alt="Pil Ã¥ben" />
    {title}
   
  </summary>
  <div class="accordion-content">
    <slot />
  </div>
</details>



<style>
 .accordion {
      padding: 1rem 20rem;
      font-size: 1.3rem;

    }
 
  .accordion summary {
    font-weight: bold;
    padding: 1rem 0;
    cursor: pointer;
    border-bottom: 1px solid rgb(255, 60, 0);
    list-style: none;
    transition: color 0.3s ease;
  }

  .accordion summary:hover {
    color: rgb(255, 100, 50);
  }

  .accordion-content {
    padding: 0.5rem 0;
    font-size: 1rem;
    max-height: 0;
    opacity: 0; 
    transform: translateY(-10px); 
    overflow: hidden;
    transition: max-height 0.3s ease, opacity 0.3s ease, transform 0.3s ease; 
    line-height: 1.5;
  }

  .accordion-icon {
    width: 16px;
    height: auto;
    transition: transform 0.3s ease;
  }

  .accordion-icon.open {
    display: none; 
  }

  details[open] .accordion-icon.closed {
    display: none; 
  }

  details[open] .accordion-icon.open {
    display: inline; 
  }

details[open] .accordion-content {
    max-height: 500px; 
    opacity: 1; 
    transform: translateY(0); 
  }
</style>
