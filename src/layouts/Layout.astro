---
const { title } = Astro.props;
const { page } = Astro.props;
const { previous } = Astro.props;
const { previousURL } = Astro.props;
---

<!doctype html>
<html lang="da">
  <head>
    <link rel="stylesheet" href="../../base.css" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Circular Lab - {title}</title>
  </head>
  <body>
    <header>
      <img src="../../public/imgs_circular_lab/header.png" alt="" />
      <div class="menu">
        <a href="#">Forside</a> / <a href="#">Labs</a> / <a href="#"
          >Circular Labs</a
        >
        / <a href="/">Circular Lab</a> / <a href={previousURL}>{previous}</a> /
        <a href="#">{page}</a>
      </div>
    </header>
    <main>
      <slot />
    </main>
  </body>
  <footer>
    <img src="../../public/imgs_circular_lab/footer.png" alt="" />
  </footer>
</html>

<style>
  html,
  body {
    background-color: #ededed;
    margin: 0;
    width: 100%;
    height: 100%;
  }

  main {
    max-width: 1200px;
    margin: 0 auto;
  }

  .menu {
    display: flex;
    gap: 10px;
    padding: 10px;
    justify-content: start;
    align-items: baseline;
  }
</style>
